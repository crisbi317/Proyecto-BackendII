<div class="ticket-container">
  <div class="ticket-header">
    <h1>âœ“ Compra Exitosa</h1>
    <p class="ticket-code">Ticket: {{ticket.code}}</p>
  </div>

  <div class="ticket-info">
    <div class="info-row">
      <span class="label">Fecha:</span>
      <span class="value">{{ticket.purchase_datetime}}</span>
    </div>
    <div class="info-row">
      <span class="label">Comprador:</span>
      <span class="value">{{ticket.purchaser}}</span>
    </div>
    <div class="info-row total">
      <span class="label">Total:</span>
      <span class="value">${{ticket.amount}}</span>
    </div>
  </div>

  <div class="ticket-products">
    <h2>Productos Comprados</h2>
    <table>
      <thead>
        <tr>
          <th>Producto</th>
          <th>Cantidad</th>
          <th>Precio Unit.</th>
          <th>Subtotal</th>
        </tr>
      </thead>
      <tbody>
        {{#each ticket.products}}
        <tr>
          <td>{{this.product.title}}</td>
          <td>{{this.quantity}}</td>
          <td>${{this.price}}</td>
          <td>${{multiply this.price this.quantity}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <div class="ticket-actions">
    <a href="/products" class="button" style="display: inline-block; padding: 12px 24px; background: #4CAF50; color: white; text-decoration: none; border-radius: 5px;">
      Seguir Comprando
    </a>
    <a href="/profile" class="button" style="display: inline-block; padding: 12px 24px; background: #4CAF50; color: white; text-decoration: none; border-radius: 5px;">
      Mi Perfil
    </a>
    <button onclick="window.print()" class="button print-button" style="padding: 12px 24px; background: #2196F3; color: white; border: none; border-radius: 5px; cursor: pointer;">
      Imprimir Ticket
    </button>
  </div>
</div>

