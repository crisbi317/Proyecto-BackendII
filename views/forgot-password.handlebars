<div class="container-autenticacion">
  <h2>Recuperar Contraseña</h2>
  
  <form id="forgotPasswordForm">
    <div class="formulario">
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required />
    </div>

    <button type="submit">Enviar Email de Recuperación</button>
  </form>

  <div id="mensaje"></div>

  <p><a href="/login">Volver al login</a></p>
</div>

<style>
  .container-autenticacion {
    max-width: 400px;
    margin: 50px auto;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 8px;
  }
  .formulario {
    margin-bottom: 15px;
  }
  .formulario label {
    display: block;
    margin-bottom: 5px;
  }
  .formulario input {
    width: 100%;
    padding: 8px;
    border: 1px solid #ddd;
    border-radius: 4px;
  }
  button {
    width: 100%;
    padding: 10px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }
  button:hover {
    background-color: #0056b3;
  }
  #mensaje {
    margin-top: 15px;
    padding: 10px;
    border-radius: 4px;
  }
  .exito {
    background-color: #d4edda;
    color: #155724;
  }
  .error {
    background-color: #f8d7da;
    color: #721c24;
  }
</style>

<script>
  document.getElementById('forgotPasswordForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const email = document.getElementById('email').value;
    const messageDiv = document.getElementById('mensaje');
    
    try {
      const response = await fetch('/api/sessions/forgot-password', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ email })
      });

      const data = await response.json();
      
      if (response.ok) {
        messageDiv.className = 'exito';
        messageDiv.textContent = data.message;
        document.getElementById('forgotPasswordForm').reset();
      } else {
        messageDiv.className = 'error';
        messageDiv.textContent = data.message;
      }
    } catch (error) {
      messageDiv.className = 'error';
      messageDiv.textContent = 'Error al procesar la solicitud';
    }
  });
</script>