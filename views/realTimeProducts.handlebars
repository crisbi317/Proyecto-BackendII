<div class="admin-container">
  <div class="admin-header">
    <h1>Gesti√≥n de Productos en Tiempo Real</h1>
    <div class="user-info">
      <span>Admin: {{user.first_name}} {{user.last_name}}</span>
      <a href="/profile" class="btn-volver">‚Üê Volver al Perfil</a>
    </div>
  </div>

  <div class="seccion-crear-producto">
    <h2>Crear Nuevo Producto</h2>
    <form id="formulario-crear-producto">
      <div class="form-grid">
        <div class="form-group">
          <label for="title">T√≠tulo:</label>
          <input type="text" id="title" name="title" required />
        </div>

        <div class="form-group">
          <label for="category">Categor√≠a:</label>
          <input type="text" id="category" name="category" required />
        </div>

        <div class="form-group">
          <label for="price">Precio:</label>
          <input type="number" id="price" name="price" step="0.01" min="0" required />
        </div>

        <div class="form-group">
          <label for="stock">Stock:</label>
          <input type="number" id="stock" name="stock" min="0" required />
        </div>

        <div class="form-group">
          <label for="code">C√≥digo:</label>
          <input type="text" id="code" name="code" required />
        </div>

        <div class="form-group full-width">
          <label for="description">Descripci√≥n:</label>
          <textarea id="description" name="description" rows="3" required></textarea>
        </div>
      </div>

      <button type="submit" class="btn-create">Crear Producto</button>
    </form>
  </div>

  <div class="products-section">
    <h2>Productos Existentes</h2>
    <div id="productsList" class="products-grid">
      {{#each products}}
        <div class="product-card" data-id="{{this._id}}">
          <h3>{{this.title}}</h3>
          <p><strong>Categor√≠a:</strong> {{this.category}}</p>
          <p><strong>Precio:</strong> ${{this.price}}</p>
          
          <div class="stock-control">
            <label><strong>Stock:</strong></label>
            <div class="stock-buttons">
              <button onclick="updateStock('{{this._id}}', -1)" class="btn-stock-minus">
                ‚ûñ
              </button>
              <span class="stock-value" id="stock-{{this._id}}">{{this.stock}}</span>
              <button onclick="updateStock('{{this._id}}', 1)" class="btn-stock-plus">
                ‚ûï
              </button>
            </div>
          </div>
          
          <p><strong>C√≥digo:</strong> {{this.code}}</p>
          <p class="description">{{this.description}}</p>
          <button onclick="deleteProduct('{{this._id}}')" class="btn-delete">
            üóëÔ∏è Eliminar
          </button>
        </div>
      {{/each}}
    </div>
  </div>
</div>

